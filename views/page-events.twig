{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		{% block contentheader %}
			{% include 'components/sections/section--header.twig' %}
		{% endblock %}
		
		
		<section class="section--be-informed-intro relative">
			{% if post.post_parent != 0 %}{% include 'components/blocks/block--breadcrumbs.twig' %}{% endif %}
			<i class="icon-bg-map topright fade" data-grunticon-embed></i>
			<div class="max-wrap margin--center spacing--gutter spacing--vert-2 spacing--dsk-vert-6 relative ztop flex flex--wrap justify--between">
				<div class="grid--one grid--sm-three-fifths">
					{% for post in events %}
						{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
					{% endfor %}
				</div>
				<div class="grid--one grid--sm-one grid--md-third">
					{% include 'components/blocks/block--keep-me-informed.twig' %}
				</div>
			</div>
		</section>
		
	</article>
{% endblock %}