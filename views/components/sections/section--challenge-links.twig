<section class="section--challenge-links spacing--gutter spacing--vert-6 bg" {% if challenge.image %}style="background-image:url('{{challenge.image|resize(1280)}}');"{% endif %}>
<div class=" flex--wrap flex--double margin--center max-wrap justify--around">
	{% for tier in challenge.tiers %}
		<div class="block--link grid--one grid--md-two-fifths spacing--vert-2 spacing--dsk-vert-5 spacing--horiz-2 bg--gray-light margin--bot-1">
			<h2 class="font--condense text--center text--uppercase margin--bot-1">{{tier.title}}</h2>
			<hr class="color--black grid--sm-half grid--md-fourth">
			<div class="font--serif font--large spacing--vert-1">
				{{tier.content}}
			</div>
		<a href="" data-target="tier--{{loop.index + 1 }}" class="button trigger--form underline center">Start Here</a>
		</div>
	{% endfor %}
</div>
</section>