<div class="block--home-twitter grid--one {% if home.partners.title and home.partners.name %}grid--md-third{% else %}grid--md-half{% endif %}">
	{% if home.partners.title and home.partners.name %}{% else %}<h3 class="transform--no font--huge">News</h3>{% endif %}
	{% for tweet in twitter %}
		{% if loop.index < 3 %}
			{% if loop.index == 2 %}
				<h2 class="text--uppercase font--condense">{{news.title}}</h2>
			{% endif %}
			<div class="block--tweet">
				<div class="piece--twitter-user font--bold text--uppercase letter--1"><i class="icon-social--twitter" data-grunticon-embed></i> @{{tweet.user}}</div>
				<div class="font--serif">{{tweet.text}}</div>

			</div>
		{% endif %}
		
	{% endfor %}
	<a class="button underline color--black center" href="{{home.partners.newscta.url}}" target="{{home.partners.newscta.target}}" title="{{home.partners.newscta.title}}">{{home.partners.newscta.title}}</a>
</div>